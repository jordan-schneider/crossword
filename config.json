{
  "interface": {
	"line-fill": "grey70",
	"show-clock": true,
	"clock-color": "grey70",
	"font": {
	  "family": "tkDefaultFont",
	  "color": "black",
	  "title-size": 25,
	  "header-size": 20,
	  "label-size": 15,
	  "list-size": 10,
	  "chat-size": 0,
	  "size-modifier": 0
	},
	"board": {
	  "cell-size": 33,
	  "letter-pad": 17,
	  "deselected-fill": "white",
	  "selected-word-fill": "light blue",
	  "selected-letter-fill": "yellow",
	  "empty-fill": "black",
	  "correct-fill": "green",
	  "incorrect-fill": "red"
	}
  },
  "behavior": {
	"on-double-arrow-key": ["move in direction", "stay in cell"],
	"on-space-key": ["clear and skip", "change direction"],
	"on-enter-key": ["next word"],
	"on-tab-key": ["next word"],
	"on-last-letter-go-to": ["next word", "first cell", "same cell"],
	"on-filled-letter": ["skip", "stay"]
  }
}


